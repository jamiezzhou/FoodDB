  <!-- find restaurants section -->
  <section class="ftco-section">
    <form method="POST" action="/homepage" class="signup-form" enctype="application/json">
      <div class="container">
        <div class="row">
          <div class="booking-cta">
            <h1>Find Restaurants</h1>
          </div>
          <div class="booking-form">
            <form>
              <div class="row">
                <div class="col-md-8">
                  <div class="form-group">
                    <span class="form-label">Restaurant Name</span>
                    <input class="form-control" name="resName" type="text" placeholder="Enter Name of the Restaurant" />
                  </div>
                </div>
                <div class="col-md-4">
                  <div class="form-group">
                    <span class="form-label">Types</span>
                    <select name="types" class="form-control">
                      <option value=""></option>
                      <option value="F">Fine Dining</option>
                      <option value="C">Convenience Food</option>
                      <option value="S">Snacks&Drinks</option>
                    </select>
                    <span class="select-arrow"></span>
                  </div>
                </div>
              </div>
              <div class="row">
                <!-- <div class="col-md-4">
                  <div class="form-group">
                    <span class="form-label">Rating</span>
                    <select class="form-control">
                      <option value="1">1</option>
                      <option value="2">2</option>
                      <option value="3">3</option>
                      <option value="4">4</option>
                      <option value="5">5</option>
                    </select>
                    <span class="select-arrow"></span>
                  </div>
                </div> -->
                <div class="col-md-4">
                  <div class="form-btn">
                    <button class="submit-btn" formaction="/search">Search</button>
                  </div>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>

      <!-- review section -->
      <div class="container">
        <div class="row">
          <div class="reviews">
            <div class="booking-form">

              <form>
                <div class="row">
                  <div class="col-md-3">
                    <div class="form-btn">
                      <button class="submit-btn" formaction="/reservation">Reservation</button>
                    </div>
                  </div>
                  <div class="col-md-3">
                    <div class="form-btn">
                      <button class="submit-btn" formaction="/delivery">Delivery</button>
                    </div>
                  </div>
                  <div class="col-md-3">
                    <div class="form-btn">
                      <button class="submit-btn" formaction="/">Account</button>
                    </div>
                  </div>
                  <div class="col-md-3">
                    <div class="form-btn">
                      <button class="submit-btn" formaction="/review">Review</button>
                    </div>
                  </div>
                </div>

              </form>
            </div>
          </div>
        </div>
      </div>
    </form>
  </section>
