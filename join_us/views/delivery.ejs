
<head>
  <meta charset="UTF-8" />
  <title>Delivery</title>
  <link rel="stylesheet" href="/account-styles.css" />
</head>
<body>
  <section class="ftco-section">
    <form method = "POST" action="/deliveryrequest" class="signup-form" enctype="application/json">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-md-9 col-lg-6">
          <div class="login-wrap">
            <h3 class="mb-4 text-center">Make Delivery</h3>
              <div class="row">
                <div class="col-md-6">
                  <div class="form-group mb-4">
                    <input
                      type="text"
                      name="username"
                      class="form-control"
                      placeholder="Username"
                    />
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="form-group mb-4">
                    <input
                      type="text"
                      name="phone"
                      class="form-control"
                      placeholder="Phone Number"
                    />
                  </div>
                </div>
                <div class="col-md-8">
                  <div class="form-group mb-4">
                    <input
                      type="text"
                      name="rest_id"
                      class="form-control"
                      placeholder="Resetaurant ID (Find in homepage)"
                    />
                  </div>
                </div>
                <div class="col-md-12">
                  <div class="form-group mb-4">
                    <input
                      type="text"
                      name="address"
                      class="form-control"
                      placeholder="Address"
                    />
                  </div>
                </div>
                <div class="col-md-12">
                  <div class="form-group mb-4">
                    <input
                      type="text"
                      name="instruct"
                      class="form-control"
                      placeholder="Instructions"
                    />
                  </div>
                </div>
                <span class="form-label">Food Selection (Please find food IDs in restaurant menu at homepage)</span>
                <div class="col-md-6">
                  <div class="form-group mb-4">
                    <input
                      type="text"
                      name="food1"
                      class="form-control"
                      placeholder="Food id1"
                    />
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="form-group mb-4">
                    <span class="form-label"></span>
                    <input
                      type="text"
                      name="food2"
                      class="form-control"
                      placeholder="Food id2"
                    />
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="form-group mb-4">
                    <input
                      type="text"
                      name="food3"
                      class="form-control"
                      placeholder="Food id3"
                    />
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="form-group mb-4">
                    <input
                      type="text"
                      name="food4"
                      class="form-control"
                      placeholder="Food id4"
                    />
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="form-group mb-4">
                    <span class="form-label">Explected Delivery Time</span>
                    <input
                      type="text"
                      name="dlvy_time"
                      class="form-control"
                      readonly = true
                      value = <%= new Intl.DateTimeFormat('en-US', {
                        hour: 'numeric', minute: 'numeric', second: 'numeric',
                        hour12: false
                      }).format(new Date(new Date - (-300 * 60 * 100))); %>
                    />
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="form-group mb-4">
                    <span class="form-label">Total Fees (all fees included)</span>
                    <input
                      type="text"
                      name="fees"
                      class="form-control"
                      readonly = true
                      value = <%= data %>
                    />
                  </div>
                </div>
                <div class="col-md-12">
                  <div class="form-group mb-4">
                    <input
                      type="password"
                      name="password"
                      class="form-control"
                      placeholder="Confirm Password"
                    />
                  </div>
                </div>
                <div class="col-md-12">
                  <div class="form-group d-flex">
                    <button
                      type="submit"
                      formaction = "/deliveryconfirm"
                      class="btn btn-primary rounded submit p-3"
                    >
                      Confirm
                    </button>
                  </div>
                </div>
                <div class="col-md-12">
                  <div class="form-group d-flex">
                    <button
                      type="submit"
                      formaction = "/deliveryrequest"
                      class="btn btn-primary rounded submit p-3"
                    >
                      Request
                    </button>
                  </div>
                </div>
                <div class="col-md-12">
                  <div class="form-group d-flex">
                    <button
                      type="submit"
                      formaction = "/deliveryreturn"
                      class="btn btn-primary rounded submit p-3"
                    >
                      Return to Homepage
                    </button>
                  </div>
                </div>
                </div>
              </div>
          </div>
        </div>
      </div>
    </div>
  </form>
  </section>
</body>
